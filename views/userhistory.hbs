<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../css/userHistory.css">
</head>
<body>

    <div >  
        <h1>Hello {{obj.user}}</h1>  
    </div>
        {{#if history}}
        <table align="center">
            <thead>
                <tr>
                    <th>Ticket Id</th>
                    <th>Flight Name</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Gender</th>
                    <th>Seat Number</th>
                    <th>Source</th>
                    <th>Start Date</th>
                    <th>Start Time</th>
                    <th>Destination</th>
                    <th>End Date</th>
                    <th>End Time</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                {{#if history.future}}
                <tr style="color: orangered;">
                    <td colspan="13" >Upcoming Journeys</td>
                </tr>
                {{#each history.future as |item|}}
                    <tr class = "book">
                        <td>{{item.T_id}}</td>
                        <td>{{item.flight_name}}</td>
                        <td>{{item.pass_name}}</td>
                        <td>{{item.pass_age}}</td>
                        <td>{{item.pass_gender}}</td>
                        <td>{{item.pass_seat_num}}</td>
                        <td>{{item.source}}</td>
                        <td>{{item.startDate}}</td>
                        <td>{{item.startTime}}</td>
                        <td>{{item.destination}}</td>
                        <td>{{item.endDate}}</td>
                        <td>{{item.endTime}}</td>
                        <td>{{item.price}}</td>
                    </tr>
                {{/each}}
                {{/if}}

                {{#if history.past}}
                <tr style="background-color: orangered; font-weight: bolder">
                    <td colspan="13">Past Journeys</td>
                </tr>
                {{#each history.past as |item|}}
                    <tr class = "book">
                        <td>{{item.T_id}}</td>
                        <td>{{item.flight_name}}</td>
                        <td>{{item.pass_name}}</td>
                        <td>{{item.pass_age}}</td>
                        <td>{{item.pass_gender}}</td>
                        <td>{{item.pass_seat_num}}</td>
                        <td>{{item.source}}</td>
                        <td>{{item.startDate}}</td>
                        <td>{{item.startTime}}</td>
                        <td>{{item.destination}}</td>
                        <td>{{item.endDate}}</td>
                        <td>{{item.endTime}}</td>
                        <td>{{item.price}}</td>
                    </tr>
                {{/each}}
                {{/if}}
            </tbody>
        </table>
        {{else}} 
           <h1>No Flight History Available</h1>
        {{/if}}
</body>
</html>