<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Portal</title>
    
</head>
<body>
    <h3>Book Flights</h3>
    <form method="POST" action="/user/search">
        <label for="from">Source</label>
        <input type="text" name="source" id="from" placeholder="source">

        <label for="to">Destination</label>
        <input type="text" name="destination" id="to" placeholder="destination">

        <label for="date">Start Date</label>
        <input name="startDate" id="date">
        {{!-- <select name="travellers" id="travellers">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
        </select> --}}
        <input type="submit" name="submit">
    </form>
    <br>
    <table id="table" cellspacing="10" border="1" cellpadding="10">
        {{#if flights}}
        <tr>
            <th>Name </th>
            <th>Source</th>
            <th>Destination</th>
            <th>Price</th>
            <th>Start Date</>
            <th>Start Time</th>
            <th>End Date</th>
            <th>End Time</th>
        </tr>
        {{/if}}
		{{#each flights as |item|}}
			<tr>
				<td>{{item.flightName}}</td>
				<td>{{item.source}}</td>
				<td>{{item.destination}}</td>
				<td>{{item.price}}</td>
				<td>{{item.startDate}}</td>
				<td>{{item.startTime}}</td>
				<td>{{item.endDate}}</td>
				<td>{{item.endTime}}</td>
			</tr>
		{{/each}}
    </table>
    
     <h2>History</h2>
</body>
</html>